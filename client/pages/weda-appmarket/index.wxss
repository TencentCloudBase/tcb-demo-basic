page {
  background-color: #F7F7F8;
}
.weda-banner{
  width: 100%;
  height: 452rpx;
  position: relative;
  z-index: -1;
}
.weda-banner__tip {
  position: absolute;
  left: 48rpx;
}
.weda-banner__title {
  font-size: 44rpx;
  line-height: 44rpx;
  color: #fff;
  margin-bottom: 16rpx;
}
.weda-banner__description {
  font-size: 24rpx;
  line-height: 44rpx; 
  color: rgba(255,255,255,0.7);
  width: 389rpx;
}
.weda-container {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  background-color: #F7F7F8;
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
  padding: 48rpx 24rpx;
  margin-top: -40rpx;
  z-index: 1;
}

.weda-card {
  width: 344rpx;
  height: 444rpx;
}
.weda-card .tcb-card__logo {
  width: 100%;
  height: 218rpx;
}
.weda-card .tcb-card__content {
  padding: 24rpx 16rpx 28rpx;
}
.weda-card .tcb-card__title {
 line-height: 44rpx;
}
.weda-card .tcb-card__description {
  font-size: 24rpx;
  margin-top: 8rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  height: 44rpx;
}
.tcb-card__footer {
  height: 80rpx;
  line-height: 80rpx;
  box-sizing: border-box;
  border-top: 1px solid #F7F7F8;
}
.weda-card__perview {
  font-size: 28rpx;
  text-align: center;
  color: #006EFF;
}