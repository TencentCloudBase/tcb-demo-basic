.weda-image {
  width: 120px;
  height: 120px;
}
.weda-img-mask {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: black;
  z-index: 99;
}

.weda-img-preview {
  background: center center no-repeat;
  background-size: contain;
  width: 100%;
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
}

.weda-img-modal-close-btn {
  position: fixed;
  top: 16px;
  right: 16px;
  display: inline-block;
  z-index: 99;
}

.weda-image-error {
  position: relative !important;
  display: inline-block !important;
}

.weda-image-error::before {
  content: '';
  background: #f5f5f5
    url('data:image/svg+xml;base64,')
    no-repeat center / 50% 50%;
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}
