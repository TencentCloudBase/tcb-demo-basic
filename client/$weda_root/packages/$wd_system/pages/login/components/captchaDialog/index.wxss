#loader {
  background: #fff;
  height: 100%;
  left: 0;
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 9;
}
.spinner {
  animation: 1s linear infinite spin;
  border: 3px solid rgba(2, 158, 249, 0.2);
  border-radius: 50%;
  border-top-color: #029ef9;
  bottom: 0;
  height: 40px;
  left: 0;
  margin: auto;
  position: absolute;
  right: 0;
  top: 0;
  width: 40px;
}
@keyframes spin {
  0% {
    transform: rotate(0);
  }
  to {
    transform: rotate(1turn);
  }
}

.input_field {
  position: relative;
  width: 100%;
  height: 45px;
  margin-top: 15px;
}
.input_field.captch_box {
  height: 80px;
}

.captch_box image {
  height: 70px;
  width: 210px;
  pointer-events: none;
}

.icon-redo,
.icon-redo::before {
  box-sizing: border-box;
}
body {
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background: 0 0;
}
.button button,
.input_field input {
  box-sizing: border-box;
  height: 100%;
  width: 100%;
  outline: 0;
  border: none;
  border-radius: 8px;
  font-size: 14px;
}
.input_field input {
  padding: 0 15px;
  border: 1px solid rgba(0, 0, 0, 0.1);
}
.refresh_button {
  position: absolute;
  top: 50%;
  right: 5px;
  transform: translateY(-50%);
  padding-left: 12px;
  height: 40px;
  width: 40px;
  border: none;
  border-radius: 4px;
}
.refresh_button:active {
  transform: translateY(-50%) scale(0.98);
}
.captch_input input:focus {
  box-shadow: 0 1px 1px rgba(0, 0, 0, 0.08);
}
.message {
  font-size: 14px;
  margin: 14px 0;
  color: #347eff;
  display: none;
}
.icon-redo,
.message.active {
  display: block;
}
.button button {
  user-select: none;
}
.button button:active {
  transform: scale(0.99);
}
.button.disabled {
  opacity: 0.6;
  pointer-events: none;
}
.icon-redo {
  position: relative;
  width: 16px;
  height: 16px;
  border: 2px solid;
  border-right-color: transparent;
  border-radius: 100px;
}
.icon-redo::before {
  content: '';
  display: block;
  position: absolute;
  width: 6px;
  height: 6px;
  border-top: 2px solid;
  border-right: 2px solid;
  top: -3px;
  right: -1px;
  transform: rotate(68deg);
}

.wd-devtools-highlight {
  position: absolute;
  background-color: #52d959;
  pointer-events: none;
  z-index: 9999;
}

.refreshButton {
  position: relative;
  box-sizing: border-box;
  max-width: 40px;
  height: 40px;
  padding: 0;
}

.captch_box {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.container {
  text-align: left;
}

.message {
  padding-left: 5px;
}
.icon-redo {
  position: absolute;
  top: 50%;
  left: 50%;
  translate: -50% -50%;
}
